<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    tools:context=".Profile">
    <RelativeLayout
        android:id="@+id/container_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp">
        <View
            android:id="@+id/rectangleView"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/DegreeTV"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:text="Heading: 0.0"
            android:textSize="10sp"
        android:textStyle="normal|bold" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/compass_image"
            android:layout_below="@+id/DegreeTV"
            android:layout_centerHorizontal="true"
            android:src="@drawable/compass_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/step_interface"
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/step_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:text="Step Counter"
            android:textSize="10sp"
            android:textStyle="normal|bold" />
        <View
            android:id="@+id/rectangleView2"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/step_counter"
            android:background="@drawable/rect2"/>
        <TextView
            android:id="@+id/step_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:text="Step count: "
            android:textSize="10sp"
            android:textStyle="normal|bold" />
        <TextView
            android:id="@+id/step_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:layout_toEndOf="@+id/step_count2"
            android:text="0"
            android:textSize="10sp"
            android:background="@color/white"
            android:textStyle="normal|bold" />
        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rectangleView2"
            android:background="?attr/background"
            android:src="@drawable/play_black" />

        <ImageButton
            android:id="@+id/restart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/background"
            android:src="@drawable/restart_black"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rectangleView2"
            android:layout_toEndOf="@id/play_button"
            android:layout_marginStart="20dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/change_language_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/background"
        android:layout_centerHorizontal="true"
        android:src="?attr/languageIcon"
        android:layout_above="@+id/container_button"
        />
    <RelativeLayout
        android:id="@+id/container_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/swap_theme_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/background"
            android:layout_toEndOf="@id/change_profile_button"
            android:src="?attr/themeIcon"
            android:layout_margin="20dp"
            />
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/background"
            android:src="?attr/backIcon"
            android:layout_margin="20dp"
            />
        <ImageButton
            android:id="@+id/change_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/background"
            android:src="?attr/switchProfileIcon"
            android:layout_toEndOf="@id/back_button"
            android:layout_margin="20dp"
            />
    </RelativeLayout>
</RelativeLayout>