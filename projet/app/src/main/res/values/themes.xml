<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.projet" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_100</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textColor">@color/purple_700</item>
        <item name="background">@color/purple_100</item>
        <item name="buttonBackground">@color/purple_500</item>
        <item name="buttonTextColor">@color/purple_700</item>
        <item name="themeIcon">@drawable/theme_black</item>
        <item name="profileIcon">@drawable/profile_black</item>
        <item name="analyticsIcon">@drawable/analytics_black</item>
        <item name="backIcon">@drawable/back36_black</item>
        <item name="switchProfileIcon">@drawable/switch_profile_black</item>
        <item name="languageIcon">@drawable/language_black</item>
        <item name="createProfileIcon">@drawable/create_profile_black</item>
        <item name="cameraIcon">@drawable/camera_black</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.projet_dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textColor">@color/purple_500</item>
        <item name="background">@color/purple_700</item>
        <item name="buttonTextColor">@color/purple_700</item>
        <item name="buttonBackground">@color/purple_500</item>
        <item name="themeIcon">@drawable/theme_white</item>
        <item name="profileIcon">@drawable/profile_white</item>
        <item name="analyticsIcon">@drawable/analytics_white</item>
        <item name="backIcon">@drawable/back36_white</item>
        <item name="switchProfileIcon">@drawable/switch_profile_white</item>
        <item name="languageIcon">@drawable/language_white</item>
        <item name="createProfileIcon">@drawable/create_profile_white</item>
        <item name="cameraIcon">@drawable/camera_white</item>
    </style>
</resources>